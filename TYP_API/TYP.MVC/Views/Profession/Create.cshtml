@using TYP.Service.DTOs.ProfessionDTOs
@model ProfessionPostDTO
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fs-17 font-weight-600 mb-0">Create Scientific Name</h6>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Code" class="font-weight-600">Code</label>
                        <input class="form-control" placeholder="Code" asp-for="Code">
                        <span asp-validation-for="Code" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="font-weight-600">Name</label>
                        <input class="form-control" placeholder="Name" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger">  </span>
                    </div>
                    
                    <div class="form-group" id="CategoryDiv">
                        <label asp-for="FacultyId">Faculty</label>
                        <select class="form-control" name="FacultyId">
                            <option value="0" disabled>--Select Faculty--</option>
                            <option value="1">Reqemsal Iqtisadiyyat</option>
                            <option value="2">Maliyyə və Mühasibat</option>
                            <option value="3">Mühəndislik</option>
                            <option value="4">İqtisadiyyat və idarəetmə</option>
                            <option value="5">Türk Dünyası İqtisad</option>
                            <option value="6">Biznes və Menecment</option>
                            <option value="7">Rus İqtisad</option>
                            <option value="8">Beynəlxalq İqtisadiyyat Məktəbinin</option>
                            <option value="9">SABAH Mərkəzi</option>
                            <option value="10">UNEC Dizayn məktəbi</option>
                            @*@foreach (var item in ViewBag.Departments.Departments)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }*@
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

